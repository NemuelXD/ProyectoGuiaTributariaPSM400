<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_color1"
    tools:context=".MainActivityGuia">

    <LinearLayout
        android:layout_width="406dp"
        android:layout_height="731dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <LinearLayout
            android:layout_width="298dp"
            android:layout_height="101dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="235dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="FORMULARIO 110"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="89dp"
                android:layout_height="100dp"
                android:src="@drawable/gif_asistente2" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button6"
                android:layout_width="57dp"
                android:layout_height="71dp"
                android:layout_weight="1"
                android:backgroundTint="#177FD4"
                android:text="1"
                android:textSize="24sp"
                android:textStyle="italic" />

            <Space
                android:layout_width="12dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="256dp"
                android:layout_height="70dp"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:text="Debe ingresar al siguiente sitio web https://www.impuestos.gob.bo"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="italic" />

            <Space
                android:layout_width="27dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            app:srcCompat="@drawable/imgform110_01" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button5"
                android:layout_width="57dp"
                android:layout_height="71dp"
                android:layout_weight="1"
                android:backgroundTint="#177FD4"
                android:text="2"
                android:textSize="24sp"
                android:textStyle="italic" />

            <Space
                android:layout_width="12dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="256dp"
                android:layout_height="70dp"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:text="Debe ingresar al siguiente sitio web https://www.impuestos.gob.bo"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="italic" />

            <Space
                android:layout_width="27dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                app:srcCompat="@drawable/imgform110_01"
                tools:layout_editor_absoluteX="-201dp"
                tools:layout_editor_absoluteY="555dp" />

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="158dp"
                android:layout_marginTop="105dp"
                android:src="@drawable/gif_hand" />
        </RelativeLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="35dp"
                android:layout_height="47dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button8"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_color4"
                android:text="Continuar"
                android:textColor="#FFFFFF"
                android:textStyle="bold|italic"
                app:backgroundTint="@null" />

            <Space
                android:layout_width="13dp"
                android:layout_height="48dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button9"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_color4"
                android:text="Volver"
                android:textColor="#FFFFFF"
                android:textStyle="bold|italic"
                app:backgroundTint="@null" />

            <Space
                android:layout_width="35dp"
                android:layout_height="46dp"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>